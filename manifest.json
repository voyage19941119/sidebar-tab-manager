{
  "manifest_version": 3,
  "name": "Sidebar Tab Manager",
  "version": "1.0.0",
  "description": "在侧边栏中管理浏览器标签页，支持标签页分组、右键关闭等功能",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "tabGroups",
    "sidePanel",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "打开侧边栏标签管理器"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "打开侧边栏"
    }
  }
}

